{
  "name": "xequtive-backend",
  "version": "1.0.0",
  "description": "Backend for Xequtive taxi booking service",
  "main": "dist/index.js",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "npm run build:clean && npm run build:compile && npm run build:verify",
    "build:clean": "echo 'ğŸ§¹ Cleaning previous build...' && rimraf dist",
    "build:compile": "echo 'ğŸ”¨ Compiling TypeScript...' && tsc --listFiles",
    "build:verify": "echo 'âœ… Verifying build...' && node -e \"console.log('ğŸ“¦ Build completed successfully!'); console.log('ğŸ“ Output directory:', 'dist/'); console.log('ğŸš€ Ready for deployment!')\"",
    "prebuild": "echo 'ğŸš€ Starting build process...' && npm run type-check",
    "test": "jest",
    "lint": "echo 'ğŸ” Running ESLint...' && eslint . --ext .ts",
    "type-check": "echo 'ğŸ” Type checking...' && tsc --noEmit",
    "docker:build": "docker build -t xequtive-backend .",
    "docker:run": "docker run -p 8080:8080 xequtive-backend",
    "deploy:gcloud": "npm run build && gcloud run deploy xequtive-backend --source . --region europe-west2 --allow-unauthenticated"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.10.0",
    "@google-cloud/storage": "^7.13.0",
    "axios": "^1.7.7",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "firebase-admin": "^12.6.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "resend": "^4.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.0",
    "@types/node-fetch": "^2.6.12",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "directories": {
    "doc": "docs"
  },
  "keywords": [],
  "author": ""
}
